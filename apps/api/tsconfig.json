{
  "compilerOptions": {
    "target": "es2018",                                  
    "lib": ["esnext"],                               
    "module": "commonjs",                               
    "rootDir": "src",                                    
    
    "outDir": "dist",                                   
    "removeComments": true,                              
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true                             
  }
}
